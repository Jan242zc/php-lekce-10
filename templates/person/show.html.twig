{% extends 'base.html.twig' %}

{% block title %}Person{% endblock %}

{% block body %}
    <h1>Person</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ person.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ person.name }}</td>
            </tr>
            <tr>
                <th>Age</th>
                <td>{{ person.age }}</td>
            </tr>
            <tr>
                <th>Father</th>
                <td><a href="{{ path('person_show', {'id': person.father.id}) }}">{{ person.father.name }}</a></td>
            </tr>
            <tr>
                <th>Mother</th>
                <td><a href="{{ path('person_show', {'id': person.mother.id}) }}">{{ person.mother.name }}</a></td>
            </tr>
            <tr>
                <th>Children</th>
                <td>
                    {% for child in person.children %}
                        <a href="{{ path('person_show', {'id': child.id}) }}">{{ child.name }}</a>
                        <br>
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('person_index') }}">back to list</a>

    <a href="{{ path('person_edit', {'id': person.id}) }}">edit</a>

    {{ include('person/_delete_form.html.twig') }}
{% endblock %}
